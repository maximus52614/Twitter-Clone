.list-group.col-md-12.col-md-offset-5
  .list-group-item
    %h4.list-group-item-heading
      / <haml_loud> link_to tweet.user.username </haml_loud> | Tweeted <haml_loud> time_ago_in_words(tweet.created_at) </haml_loud>
      = link_to tweet.user.username, user_path(tweet.user)
      | Tweeted #{time_ago_in_words(tweet.created_at)} ago
    - if current_user == tweet.user
      .dropdown
        %button.btn.btn-secondary.dropdown-toggle
          = link_to 'Edit', edit_tweet_path(tweet.id)
          = link_to 'Delete', tweet, method: :delete
        %p.list-group-item-text
          = tweet.content
    - else
      %p.list-group-item-text
        = tweet.content
