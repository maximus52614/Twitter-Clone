<% if user_signed_in? %>
  <html>
      <h1> Valar Alcoholis </h1>
  </html>

  <% else %>
  <h2>Log in</h2>

  <%= form_for(User.new, as: "user", url: session_path("user")) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

<% end %>
